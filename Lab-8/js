// Бінарні оператори:
console.log(15 + 7); // додавання
console.log(20 - 8); // віднімання
console.log(6 * 4); // множення
console.log(18 / 3); // ділення
console.log(17 % 5); // остача від ділення
console.log(3 ** 4); // піднесення до степеня
console.log(25 > 12); // більше
console.log(8 < 15); // менше
console.log(14 >= 14); // більше або дорівнює
console.log(9 <= 20); // менше або дорівнює
console.log(25 == "25"); // рівність за значенням
console.log(30 === "30"); // рівність за типом і значенням
console.log(12 != 7); // нестроге не дорівнює
console.log(18 !== "18"); // строго не дорівнює
console.log(true && false); // І
console.log(true || false); // АБО

