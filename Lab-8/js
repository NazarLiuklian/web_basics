		//Нехай завжди буде небо,
		//Нехай завжди буде мама,
		//Нехай завжди буду я.
var line1 = "Нехай завжди буде сонце,";
var line2 = "Нехай завжди буде небо,";
var line3 = "Нехай завжди буде мама,";
var line4 = "Нехай завжди буду я.";

var poem = line1.concat(" ", line2, " ", line3, " ", line4);

console.log(poem);

//homework Lek.ARRAYS
// Знайти неперервний підмасив масиву , сума елементів якого є максимальною.
var array = [2, -5, 3, 8, -2, 4, -1, 6];

var maxSum = array[0];
var currentSum = array[0];
var start = 0;
var end = 0;
var tempStart = 0;

for (var i = 1; i < array.length; i++) {
    if (currentSum < 0) {
        currentSum = array[i];
        tempStart = i;
    } else {
        currentSum += array[i];
    }
    
    if (currentSum > maxSum) {
        maxSum = currentSum;
        start = tempStart;
        end = i;
    }
}

var subArray = [];
for (var j = start; j <= end; j++) {
    subArray.push(array[j]);
}

console.log("Масив:", array);
console.log("Підмасив з максимальною сумою:", subArray);
console.log("Максимальна сума:", maxSum);
// Створити функцію сумування двох дуже довгих чисел представлених строкою.
function addLargeNumbers(num1, num2) {
    var result = "";
    var carry = 0;
    var i = num1.length - 1;
    var j = num2.length - 1;
    
    while (i >= 0 || j >= 0 || carry > 0) {
        var digit1 = i >= 0 ? parseInt(num1[i]) : 0;
        var digit2 = j >= 0 ? parseInt(num2[j]) : 0;
        
        var sum = digit1 + digit2 + carry;
        carry = Math.floor(sum / 10);
        result = (sum % 10) + result;
        
        i--;
        j--;
    }
    
    return result;
}

var number1 = "123456789012345678901234567890";
var number2 = "987654321098765432109876543210";

console.log("Перше число:", number1);
console.log("Друге число:", number2);
console.log("Сума:", addLargeNumbers(number1, number2));
// Написати метод реалізуючий різницю двох масивів. Причому різниця має враховувати кількість однакових елементів.
function arrayDifference(arr1, arr2) {
    var count = 0;
    var used = [];
    
    for (var i = 0; i < arr1.length; i++) {
        for (var j = 0; j < arr2.length; j++) {
            if (arr1[i] === arr2[j] && used.indexOf(j) === -1) {
                count++;
                used.push(j);
                break;
            }
        }
    }
    
    return count;
}

var array1 = [1, 2, 3, 4, 5, 2, 3];
var array2 = [2, 3, 5, 6, 7, 2];

console.log("Перший масив:", array1);
console.log("Другий масив:", array2);
console.log("Кількість однакових елементів:", arrayDifference(array1, array2));